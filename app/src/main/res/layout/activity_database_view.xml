<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatabaseView">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:srcCompat="@drawable/animebackground"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/textMsg"
        android:layout_width="305dp"
        android:layout_height="161dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="523dp"
        android:backgroundTint="#98FAFB"
        android:text="SQLite DATABASE :"
        android:textAlignment="center"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/fetchDataBtn"
        android:layout_width="153dp"
        android:layout_height="64dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="578dp"
        android:layout_marginEnd="203dp"
        android:layout_marginBottom="89dp"
        android:background="@drawable/rounded_corners"
        android:text="Display Data"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="294dp"
        android:layout_height="47dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="232dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#98FAFB"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <EditText
        android:id="@+id/ageTxt"
        android:layout_width="127dp"
        android:layout_height="50dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="375dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="306dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#98FAFB"
        android:ems="10"
        android:hint="Age"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <EditText
        android:id="@+id/nameTxt"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="375dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="308dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#98FAFB"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_marginStart="253dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="131dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#4CAF50"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="101dp"
        android:layout_height="62dp"
        android:layout_marginStart="253dp"
        android:layout_marginTop="622dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#E91E63"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <EditText
        android:id="@+id/idTxt"
        android:layout_width="274dp"
        android:layout_height="51dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="291dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="389dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#98FAFB"
        android:ems="10"
        android:hint="User ID/Mobile Number"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>