<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineProvider="background"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:srcCompat="@drawable/animebackground"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="312dp"
        android:layout_height="44dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="661dp"
        android:fontFamily="sans-serif-medium"
        android:text="Integrating SQLite x As"
        android:textColor="#86E5EB"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="576dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="107dp"
        android:background="@drawable/rounded_corners"
        android:text="Submit/sign up"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <EditText
        android:id="@+id/nameTxt"
        android:layout_width="199dp"
        android:layout_height="51dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="525dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#98FAFB"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Name"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <EditText
        android:id="@+id/mobno"
        android:layout_width="220dp"
        android:layout_height="57dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="422dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#98FAFB"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Mobile Number"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/email"
        android:layout_width="264dp"
        android:layout_height="54dp"

        android:layout_marginStart="125dp"
        android:layout_marginTop="359dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="318dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#98FAFB"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Email"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/age"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_marginStart="237dp"
        android:layout_marginTop="459dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="222dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#98FAFB"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Age"
        android:inputType="text"
        android:textAlignment="inherit"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/viewDB"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="576dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="107dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#C57DBD"
        android:text="view Database"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>